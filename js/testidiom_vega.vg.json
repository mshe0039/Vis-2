{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A parallel coordinates plot",
  "data": {
    "url": "https://raw.githubusercontent.com/mshe0039/Vis-2/main/data/2002-03%20NBA%20-%20Sheet1.csv"
  },
  "background": "white",
  "width": 730,
  "height": 380,
  "title": "Performance of NBA allstars across the past 20 years",
  "params": [
    {
      "name": "year_sel",
      "value": 2002,
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2021,
        "step": 1,
        "name": "year"
      }
    }
  ],
  "transform": [{"filter": "(datum.year == year_sel)"}],
  "layer": [
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 0},
        "opacity": {"value": 0},
        "y": {
          "field": "Points",
          "type": "quantitative",
          "axis": {"grid": false, "title": null}
        },
        "detail": {"field": "Player"}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 0},
        "opacity": {"value": 0},
        "y": {
          "field": "Blocks",
          "type": "quantitative",
          "axis": {
            "grid": false,
            "title": null,
            "orient": "right",
            "offset": {"expr": "-2*(width) / 3"}
          }
        },
        "detail": {"field": "Player"}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 0},
        "opacity": {"value": 0},
        "y": {
          "field": "Goal",
          "type": "quantitative",
          "axis": {
            "grid": false,
            "title": null,
            "orient": "right",
            "offset": {"expr": "-(width) / 3"}
          }
        },
        "detail": {"field": "Player"}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 0},
        "opacity": {"value": 0},
        "y": {
          "field": "Free Throws",
          "type": "quantitative",
          "axis": {"grid": false, "title": null, "orient": "right", "offset": 0}
        }
      }
    },
    {
      "transform": [
        {"calculate": "['Points','Blocks','Goal','Free Throws']", "as": "x"},
        {
          "calculate": "[height - scale('layer_0_y', datum.Points), height - scale('layer_1_y', datum.Blocks), height - scale('layer_2_y', datum.Goal), height - scale('layer_3_y', datum[Free Throws])]",
          "as": "y"
        },
        {"flatten": ["x", "y"]}
      ],
      "selection": {
        "Player_highlight": {
          "type": "multi",
          "fields": ["Player"],
          "bind": "legend"
        },
        "hover": {
          "type": "single",
          "on": "mouseover",
          "clear": "mouseout",
          "empty": "none"
        }
      },
      "mark": {"type": "line", "point": true, "tooltip": {"content": "data"}},
      "encoding": {
        "opacity": {
          "condition": {
            "test": {
              "or": [{"selection": "Player_highlight"}, {"selection": "hover"}]
            },
            "value": 1
          },
          "value": 0.2
        },
        "color": {"field": "Player"},
        "x": {
          "field": "x",
          "sort": null,
          "type": "ordinal",
          "scale": {"type": "point", "padding": 0},
          "axis": {"title": null, "labelAngle": 0, "domain": false}
        },
        "y": {"field": "y", "type": "quantitative", "axis": null},
        "tooltip":[
          {
            "field":"Player",
            "type": "nominal"
          },
          {
            "field":"Age",
            "type": "quantitative"
          },
          {
            "field":"PTS",
            "type": "quantitative",
            "title":"Average Points"
          },
          {
            "field":"G",
            "type": "quantitative",
            "title":"Average Goals"
          },
          {
            "field":"ThreeP",
            "type": "quantitative",
            "title":"Average 3 Point Goals"
          },
          {
            "field":"TwoP",
            "type": "quantitative",
            "title":"Average 2 Point Goals"
          },
          {
            "field":"FT",
            "type": "quantitative",
            "title":"Average Free Throws"
          },
          {
            "field":"BLK",
            "type": "quantitative",
            "title":"Average Blocks"
          }
        ]
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}},
  "config": {"padding": 0, "view": {"stroke": null}}
}