{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A parallel coordinates plot",
  "title": "Performance of different positions in the NBA",
  "background":"white",
  "data": {
    "url": "https://raw.githubusercontent.com/mshe0039/Vis-2/main/data/2002-03%20NBA%20-%20Sheet1.csv"
  },
  "width": 220,
  "height": 250,
  "mark": {
    "type": "boxplot",
    "extent": "min-max",
    "size": 30
  },
  "params": [{
    "name": "Stat_selection",
            "value": "FT",
            "bind": {
                "input": "select",
                "options": [
                    "PTS",
                    "FT"
                ],
                "labels": [
                    "Total Points Per Round",
                    "Total free throws Per Round"
                ],
                "name": "Stat Selection: "
            }
  }],
  "encoding": {
    "x": {
      "field": "Pos",
      "type": "nominal"
    },
    "color": {
      "field": "Pos",
      "title": "Position"
    },
    "y": {
      "field": "stat_sel",
      "type": "quantitative",
      "title": "Selected stat"
    }
  },
  "transform": [
    {
      "filter": {
        "field": "Pos",
        "oneOf": [
          "Small Forward",
          "SG",
          "PF",
          "PG",
          "C",
          "SG-PG"
        ]
      }
    },
    {
      "calculate":"datum[Stat_selection]","as":"stat_sel"
    }
  ]
}