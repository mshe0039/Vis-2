{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "An interactive scatter plot of global health statistics by country and year.",
  "background":"white",
  "title": "Performance of NBA allstars as they age",
  "data": {
    "url": "https://raw.githubusercontent.com/mshe0039/Visualisation-2/main/2002-03%20NBA%20-%20Sheet1.csv"
  },
  "width": 650,
  "height": 300,
  "params": [
    {
      "name": "player",
      "select": {
        "type": "point",
        "fields": [
          "Player"
        ]
      },
      "bind": "legend"
    },
    {
      "name": "year_sel",
      "value": 2002,
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2021,
        "step": 1,
        "name": "year"
      }
    },
    {
      "name": "stat",
      "value": "PTS",
      "bind": {
        "input": "select",
        "options": [
          "PTS",
          "G",
          "ThreeP",
          "TwoP",
          "FT",
          "BLK"
        ],
        "labels": [
          "Average Points Per Game",
          "Average Goals Per Game",
          "Average 3 Pointers Per Game",
          "Average 2 Pointers Per Game",
          "Average free throws Per Game",
          "Average Blocks Per Game"
        ],
        "name": "Stat Selection"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Age",
      "type": "ordinal",
      "axis": {
        "titleFont": "Microsoft JhengHei",
        "labelFontWeight": "bold"
      }
    },
    "y": {
      "field": "stat2",
      "type": "quantitative",
      "title": "Number of a stat",
      "axis": {
        "titleFont": "Microsoft JhengHei",
        "labelFontWeight": "bold"
      }
    },
    "tooltip":[
      {
        "field":"Player",
        "type": "nominal"
      },
      {
        "field":"Age",
        "type": "quantitative"
      },
      {
        "field":"PTS",
        "type": "quantitative",
        "title":"Average Points Per Game"
      },
      {
        "field":"G",
        "type": "quantitative",
        "title":"Average Goals Per Game"
      },
      {
        "field":"ThreeP",
        "type": "quantitative",
        "title":"Average 3 Point Goals per Game"
      },
      {
        "field":"TwoP",
        "type": "quantitative",
        "title":"Average 2 Point Goals per Game"
      },
      {
        "field":"FT",
        "type": "quantitative",
        "title":"Average Free Throws per Game"
      },
      {
        "field":"BLK",
        "type": "quantitative",
        "title":"Average Blocks per Game"
      }
    ],
    "color": {
      "field": "Player",
      "scale": {
        "scheme": "accent"
      }
    },
    "opacity": {
      "condition": {
        "param": "player",
        "value": 1
      },
      "value": 0.2
    }
  },
  "mark": {
    "type": "circle",
    "size": 200
  },
  "transform": [
    {
      "calculate": "datum[stat]",
      "as": "stat2"
    },
    {
      "calculate": "datum[year_sel]",
      "as": "Year"
    },
    {
      "filter": "datum.year == year_sel"
    }
  ]
}